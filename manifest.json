{
  "manifest_version": 3,  "name": "Wavi - Hand Gesture Cursor Control",
  "version": "1.1.1",
  "description": "Control your cursor with intuitive hand gestures using your webcam. Wave goodbye to traditional mouse controls!",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; default-src 'self' blob: data:"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*",
        "tracking-worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 